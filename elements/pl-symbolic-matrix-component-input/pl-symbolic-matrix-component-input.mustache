
{{#question}}
<script>
    $(function() {
        $('#pl-symbolic-matrix-component-input-{{uuid}} [data-toggle="popover"]').popover({
            sanitize: false,
            container: 'body',
            template: '<div class="popover pl-symbolic-matrix-component-input-popover" role="tooltip"><div class="arrow"></div><h3 class="popover-header"></h3><div class="popover-body"></div></div>',
        });
    });
</script>
<span class="form-inline d-inline-block ml-2 pl-symbolic-matrix-component-span-fullwidth">
    <div id="pl-symbolic-matrix-component-input-{{uuid}}" class="input-group">
        <span class="input-group-prepend">
            {{#label}}<label class="input-group-text" id="basic-addon2">{{{label}}}</label>{{/label}}
        </span>
        <div class="form-control" >
            {{{input_array}}}
        </div>
        <div class="input-group-append">
            <a role="button" class="btn btn-light border d-flex align-items-center" data-toggle="popover" data-html="true" title="Symbolic Matrix" data-content="{{info}}" data-placement="auto" data-trigger="focus" tabindex="0">
                <i class="fa fa-question-circle" aria-hidden="true"></i>
                {{#correct}}&nbsp;<span class="badge badge-success"><i class="fa fa-check" aria-hidden="true"></i> 100%</span>{{/correct}}
                {{#partial}}&nbsp;<span class="badge badge-warning"><i class="far fa-circle" aria-hidden="true"></i> {{partial}}%</span>{{/partial}}
                {{#incorrect}}&nbsp;<span class="badge badge-danger"><i class="fa fa-times" aria-hidden="true"></i> 0%</span>{{/incorrect}}

            </a>
        </div>
    </div>
</span>
{{/question}}

{{#submission}}

<div class="d-inline-block ml-2">

{{#parse_error}}
<script>
    $(function(){
        $('#pl-symbolic-matrix-component-input-submission-{{uuid}} [data-toggle="popover"]').popover({
            sanitize: false,
            container: 'body',
            template: '<div class="popover pl-symbolic-matrix-component-input-popover" role="tooltip"><div class="arrow"></div><h3 class="popover-header"></h3><div class="popover-body"></div></div>',
        });

        $('#pl-symbolic-matrix-component-input-submission-{{uuid}} [data-toggle="popover"]').on('shown.bs.popover', function () {
            MathJax.typesetPromise();
        });
    });
</script>
<span id="pl-symbolic-matrix-component-input-submission-{{uuid}}">
    {{#label}}<span>{{{label}}}</span>{{/label}}
    <a role="button" class="btn btn-light btn-sm" data-placement="auto" data-trigger="focus" data-toggle="popover" data-html="true" title="Error" tabindex="0" data-content="{{parse_error}}{{#raw_submitted_answer}}<hr><h5><small class='text-uppercase'>What you submitted</small></h5><pre>{{raw_submitted_answer}}</pre>{{/raw_submitted_answer}}">INVALID
      <span><i class="fa fa-question-circle" aria-hidden="true"></i></span>
  </a>
</span>
{{/parse_error}}

