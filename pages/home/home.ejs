<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <%- include('../partials/navbarPlain'); %>
    <div id="content" class="container">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Courses</h3>
        </div>

        <% if (course_instances.length == 0) { %>
        <div class="panel-body">
            No courses found. Use the “Edit course list” button below.
        </div>
        
        <% } else { %> <!-- course_instances.length -->

        <table class="table table-condensed table-hover table-striped">
          <tbody>
            <% course_instances.forEach(function(course_instance) { %>
            <tr>
              <td>
                <a href="<%= plainUrlPrefix %>/<%= course_instance.course_instance_id %>">
                  <%= course_instance.label %>
                </a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>

        <% } %> <!-- course_instances.length -->

        <div class="panel-footer">
          <p class="text-right no-bottom-margin">
            <a href="<%= plainUrlPrefix %>/enroll" class="btn btn-primary">
              Add or remove courses
            </a>
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
