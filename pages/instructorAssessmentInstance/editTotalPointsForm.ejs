<form name="edit-total-points-form" method="POST">
  <input type="hidden" name="__action" value="edit_total_points">
  <input type="hidden" name="__csrf_token" value="<%= __csrf_token %>">
  <input type="hidden" name="assessment_instance_id" value="<%= assessment_instance.id %>">
  <div class="form-group">
    <input type="text" class="form-control" name="points" value="<%= assessment_instance.points %>">
  </div>
  <p><small>This change will be overwritten if further questions are answered by the student.</small></p>
  <button type="button" class="btn btn-default" onclick="$('#<%= id %>').popover('hide')">
    Cancel
  </button>
  <button type="submit" class="btn btn-primary">Change</button>
</form>
